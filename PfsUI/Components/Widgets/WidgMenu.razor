@namespace PfsUI.Components

<MudDrawer @bind-Open="@_visible" DisableOverlay="true" Elevation="0" Variant="@DrawerVariant.Persistent" Color="Color.Info" Height="660px">
    <MudTreeView Items="TreeItems" Hover="true" T="WidgMenuElem" SelectedValueChanged="TreeActivationChanged"  >
        <ItemTemplate>
            <MudTreeViewItem @bind-Expanded="@context.IsExpanded" Items="@context.TreeItems" Value="@context"
                                Icon="@context.Icon" Text="@context.Name" />
        </ItemTemplate>
    </MudTreeView>
</MudDrawer>
